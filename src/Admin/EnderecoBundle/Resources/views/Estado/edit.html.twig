{% extends 'AdminCommonBundle::layout_new.html.twig' %}

{% block title %}
    {{ configuracao.valor("titulo.site.resumido") }} -
    {{ 'txt.editar'|transchoice(0,{}, 'messagesCommonBundle') }}
    {{ 'txt.estado'|transchoice(0,{}, 'messagesEnderecoBundle') }} : {{ entity.sigla }}
{% endblock %}

{% block body -%}

    <div class="page-title">
        <div class="title_left">
            <h3>
                {{ 'txt.editar'|transchoice(0,{}, 'messagesCommonBundle') }} {{ 'txt.estado'|transchoice(0,{}, 'messagesEnderecoBundle') }}
            </h3>
        </div>
        <div class="title_right">
            <div class="col-md-4 col-sm-4 col-xs-12 pull-right">
                <span class="label label-danger label-info-admin cursor-pointer" data-toggle="modal" data-target=".modal-duvida-estado-edit">
                    {{ 'title.modulo.oque.faz'|transchoice(0,{}, 'messagesCommonBundle') }}
                    <i class="fa fa-question padding-left-7 padding-right-7"> </i>
                </span>
            </div>
        </div>
    </div>

    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>{{ 'txt.editar'|transchoice(0,{}, 'messagesCommonBundle') }} {{ 'txt.estado'|transchoice(0,{}, 'messagesEnderecoBundle') }} : {{ entity.sigla }}</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    {{ include('@AdminEndereco/Elements/Estado/New/bloco_dados.html.twig') }}
                </div>
            </div>
        </div>
    </div>
    {{ include('@AdminEndereco/Elements/Estado/Edit/bloco_action.html.twig') }}
    {{ form_end(form) }}

    {% set modalDeletePagina = {
    'title': 'title.excluir.confirmacao',
    'modal': 'modal-delete',
    'iconTitle':'fa-trash',
    'bundle':'messagesCommonBundle',
    'formOption':'true',
    'controller':'NewCtrl'} %}
    {{ include('@AdminCommon/Elements/modal/modal_p_delete.html.twig', modalDeletePagina) }}
    <div class="clearfix"></div>

    {% set modalEstado = {
    'title': 'title.estado.editar',
    'descricao': 'title.modal.descricao.estado.editar',
    'modal': 'modal-duvida-estado-edit',
    'iconTitle':'fa-info-circle',
    'bundle':'messagesEnderecoBundle'} %}
    {{ include('@AdminCommon/Elements/modal/modal_g.html.twig', modalEstado) }}

{% endblock %}
