<div class="x_panel">
    <div class="x_title">
        <h2>{{ 'txt.descricao'|transchoice(0,{}, 'messagesCommonBundle') }}</h2>
        <ul class="nav navbar-right panel_toolbox">
            <li>
                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            <li class="dropdown"></li>
            </li>
        </ul>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        <div class="row">
            <div class="form-horizontal form-label-left">
                <div class="col-md-12 col-sm-12 col-xs-12 form-group" ng-show="slugDiv">
                    <div class="form-group {{ form.paginaTextos.0.titulo.vars.required ? 'item' : '' }}">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="{{ form.paginaTextos.0.titulo.vars.id }}">
                            {{ form.paginaTextos.0.titulo.vars.label|transchoice(0,{}, 'messagesCommonBundle') }}
                            {{ form.paginaTextos.0.titulo.vars.required ? '<span class="required">*</span>' : '' }}
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <span class="fa fa-align-left form-control-feedback left" aria-hidden="true"></span>
                            {{ form_row(form.paginaTextos.0.titulo, { 'label': false }) }}
                        </div>
                    </div>
                </div>
                <div class="col-md-12 col-sm-12 col-xs-12 form-group" ng-show="slugDiv">
                    <div class="form-group {{ form.paginaTextos.0.slug.vars.required ? 'item' : '' }}">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="{{ form.paginaTextos.0.slug.vars.id }}">
                            {{ form.paginaTextos.0.slug.vars.label|transchoice(0,{}, 'messagesCommonBundle') }}
                            {{ form.paginaTextos.0.slug.vars.required ? '<span class="required">*</span>' : '' }}
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <span class="fa fa-link form-control-feedback left" aria-hidden="true"></span>
                            {{ form_row(form.paginaTextos.0.slug, { 'label': false }) }}
                            <span class="label label-info label-info-admin">
                                {{ 'title.message.slug'|transchoice(0,{}, 'messagesPaginaBundle') }}
                            </span>
                            <span class="fa fa-question red padding-left-7 cursor-pointer" data-toggle="modal" data-target=".modal-duvida-slug"></span>
                            <span class="label label-danger label-info-admin" ng-hide="slugDuplicado">
                                {{ 'title.message.slug.duplicado'|transchoice(0,{}, 'messagesPaginaBundle') }}
                            </span>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 col-sm-12 col-xs-12 form-group text-center" ng-show="slugDivLoad">
                    <div class="col-md-3 col-sm-3 col-xs-12"></div>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <h4>
                            {{ 'title.slug.aguarde'|transchoice(0,{}, 'messagesCommonBundle') }}
                        </h4>
                        <p>{{ 'title.aguarde'|transchoice(0,{}, 'messagesCommonBundle') }}</p>
                        <div class="loader" style="display: block;"></div>
                    </div>
                </div>
                <div class="col-md-12 col-sm-12 col-xs-12 form-group">
                    <div class="form-group {{ form.paginaTextos.0.subTitulo.vars.required ? 'item' : '' }}">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="{{ form.paginaTextos.0.subTitulo.vars.id }}">
                            {{ form.paginaTextos.0.subTitulo.vars.label|transchoice(0,{}, 'messagesCommonBundle') }}
                            {{ form.paginaTextos.0.subTitulo.vars.required ? '<span class="required">*</span>' : '' }}
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <span class="fa fa-align-left form-control-feedback left" aria-hidden="true"></span>
                            {{ form_row(form.paginaTextos.0.subTitulo, { 'label': false }) }}
                        </div>
                    </div>
                </div>
                <div class="col-md-12 col-sm-12 col-xs-12 form-group">
                    <label class="fullname" for="{{ form.paginaTextos.0.descricao.vars.id }}">
                        {{ form.paginaTextos.0.descricao.vars.label|transchoice(0,{}, 'messagesCommonBundle') }}
                    </label>
                    {{ form_row(form.paginaTextos.0.descricao, { 'label': false }) }}
                </div>
            </div>
        </div>
    </div>
</div>
{{ form_row(form.paginaTextos.0, { 'label': false }) }}
{% set modalDuvidaSlug = {'title': 'title.modal.title.duvida.slug',
                          'descricao': 'title.modal.descricao.duvida.slug',
                          'modal': 'modal-duvida-slug',
                          'iconTitle':'fa-question',
                          'bundle':'messagesPaginaBundle'} %}
{{ include('@AdminCommon/Elements/modal/modal_g.html.twig', modalDuvidaSlug) }}