<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>
                <small>
                    {{ 'title.lista'|transchoice(0,{}, 'messagesGaleriaBundle') }}
                </small>
            </h3>
        </div>
        <div class="title_right">
            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                <div class="input-group">
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <a href="{{ path('galeria_new') }}" class="btn btn-dark" style="color: #ffffff;" title="{{ 'title.galeria.new'|transchoice(0,{}, 'messagesGaleriaBundle') }}">
                        {{ 'title.galeria.new'|transchoice(0,{}, 'messagesGaleriaBundle') }}
                    </a>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="#">Settings 1</a>
                                </li>
                                <li><a href="#">Settings 2</a>
                                </li>
                            </ul>
                        </li>
                        <li><a href="#"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <table id="example" class="table table-striped responsive-utilities jambo_table">
                        <thead>
                        <tr class="headings">
                            <th>
                                <input type="checkbox" class="tableflat">
                            </th>
                            <th>{{ 'title.titulo'|transchoice(0,{}, 'messagesCommonBundle') }}</th>
                            <th>{{ 'title.status'|transchoice(0,{}, 'messagesCommonBundle') }}</th>
                            <th>{{ 'title.data.publicacao'|transchoice(0,{}, 'messagesCommonBundle') }}</th>
                            <th>{{ 'title.data.criado'|transchoice(0,{}, 'messagesCommonBundle') }}</th>
                            <th class="sorting_dis no-link last"><span class="nobr">{{ 'txt.acao'|transchoice(1,{}, 'messagesCommonBundle') }}</span></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for entity in entities %}
                            <tr class="even pointer">
                                <td class="a-center ">
                                    <input type="checkbox" class="tableflat">
                                </td>
                                <td>
                                   {{ entity.titulo }}
                                </td>
                                <td>
                                    {% if entity.status == 1 %}
                                        <button type="button" class="btn btn-success btn-xs">
                                            {{'txt.publicado'|transchoice(1,{}, 'messagesCommonBundle') }}
                                        </button>
                                    {% else %}
                                        <button type="button" class="btn btn-danger btn-xs">
                                            {{'txt.rascunho'|transchoice(1,{}, 'messagesCommonBundle') }}
                                        </button>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if entity.dtPublicacao %}
                                        {{ entity.dtPublicacao|date('d/m/Y') }}
                                        <br />
                                        <small>{{ entity.dtPublicacao|date('H:i:s') }}</small>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if entity.dtCreated %}
                                        {{ entity.dtCreated|date('d/m/Y') }}
                                        <br />
                                        <small>{{ entity.dtCreated|date('H:i:s') }}</small>
                                    {% endif %}
                                </td>
                                <td>
                                    {#
                                    <a href="{{ path('galeria_show', { 'id': entity.id }) }}" class="btn btn-primary btn-xs"  data-toggle="tooltip" data-placement="top" title="{{ 'title.click.ver'|transchoice(0,{}, 'messagesCommonBundle') }}"><i class="fa fa-folder"></i>
                                        {{ 'txt.ver'|transchoice(0,{}, 'messagesCommonBundle') }}
                                    </a>
                                    #}
                                    <a href="{{ path('galeria_edit', { 'id': entity.id }) }}" class="btn btn-info btn-xs" data-toggle="tooltip" data-placement="top" title="{{ 'title.click.editar'|transchoice(0,{}, 'messagesCommonBundle') }}"><i class="fa fa-pencil"></i>
                                        {{ 'txt.editar'|transchoice(0,{}, 'messagesCommonBundle') }}
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <br />
        <br />
        <br />
    </div>
</div>