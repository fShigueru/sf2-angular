<div class="x_panel" ng-controller="NewCtrl">
    <div class="x_title">
        <h2>{{ 'title.quantidade.images'|transchoice(0,{}, 'messagesGaleriaBundle') }}</h2>
        <i class="fa fa-question red padding-left-7 padding-top-8 cursor-pointer" data-toggle="modal" data-target=".modal-duvida-galeria-quantidade"></i>
        <ul class="nav navbar-right panel_toolbox">
            <li>
                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            <li class="dropdown"></li>
            </li>
        </ul>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        <div class="row">
            <div class="form-horizontal form-label-left">
                <div class="col-md-12 col-sm-12 col-xs-12 form-group">
                    <div class="form-group {{ form.entity.vars.required ? 'item' : '' }}">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="qtdeImg">
                            {{ 'title.quantidade.escolha'|transchoice(0,{}, 'messagesCommonBundle') }}
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <div class="input-group">
                                <input type="text" name="qtde" id="qtdeImg" ng-model="qtde" class="form-control" min="1" max="15" value="{{ qtde }}" required="required" />
                                <span class="input-group-btn">
                                    {{ app.request.attributes.get('_route') }}
                                    <button type="button" class="btn btn-primary"
                                            ng-click="qtdeImage('{{ app.request.attributes.get('_route') == 'galeria_new' ? '/admin/galeria/new/' : '/admin/galeria/'~ entity.id ~'/edit/' }}')">
                                        {{ 'title.enviar'|transchoice(0,{}, 'messagesCommonBundle') }}
                                    </button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="x_panel" ng-controller="NewCtrl">
    <div class="x_title">
        <h2>{{ 'title.galeria.informacao'|transchoice(0,{}, 'messagesGaleriaBundle') }}</h2>
        <ul class="nav navbar-right panel_toolbox">
            <li>
                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            <li class="dropdown"></li>
        </ul>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        <div class="row">
            <div class="form-horizontal form-label-left">
                <div class="col-md-12 col-sm-12 col-xs-12 form-group">
                    <div class="form-group {{ form.titulo.vars.required ? 'item' : '' }}">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="{{ form.titulo.vars.id }}">
                            {{ form.titulo.vars.label|transchoice(0,{}, 'messagesCommonBundle') }}
                            {{ form.titulo.vars.required ? '<span class="required">*</span>' : '' }}
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <span class="fa fa-align-left form-control-feedback left" aria-hidden="true"></span>
                            {{ form_row(form.titulo, { 'label': false }) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>