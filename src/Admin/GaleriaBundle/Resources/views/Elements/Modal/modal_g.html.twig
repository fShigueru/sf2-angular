<div class="modal fade {{ modal }}" tabindex="-1" role="dialog" aria-hidden="true" ng-controller="EditCtrl">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span></button>
                <h3 class="modal-title" id="myModalLabel">
                    <i class="fa {{ iconTitle }}"></i>
                    <small>{{ title|transchoice(0,{'title':titulo}, bundle) }}</small>
                </h3>
            </div>
            <div class="modal-body">
                <div class="x_content">
                    {% for image in form.image %}
                        {% if image.vars.value.id != null %}
                            <div class="row image-edit-crop id{{ image.vars.value.id }}">
                            <div class="form-horizontal form-label-left">
                                <div class="col-md-12 col-sm-12 col-xs-12 form-group">
                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                        </label>
                                        <div class="col-md-6 col-sm-6 col-xs-12 image-modal">
                                            {{ include('@AdminGaleria/Elements/image_crop.html.twig') }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {% for texto in image.textos %}
                                <div class="form-horizontal form-label-left">
                                    <div class="col-md-12 col-sm-12 col-xs-12 form-group">
                                        <div class="form-group {{ texto.titulo.vars.required ? 'item' : '' }}">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="{{ texto.titulo.vars.id }}">
                                                {{ texto.titulo.vars.label|transchoice(0,{}, 'messagesCommonBundle') }}
                                                {{ texto.titulo.vars.required ? '<span class="required">*</span>' : '' }}
                                            </label>
                                            <div class="col-md-6 col-sm-6 col-xs-12">
                                                <span class="fa fa-align-left form-control-feedback left" aria-hidden="true"></span>
                                                {{ form_row(texto.titulo, { 'label': false }) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-xs-12 form-group">
                                        <div class="form-group {{ texto.subtitulo.vars.required ? 'item' : '' }}">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="{{ texto.subtitulo.vars.id }}">
                                                {{ texto.subtitulo.vars.label|transchoice(0,{}, 'messagesCommonBundle') }}
                                                {{ texto.subtitulo.vars.required ? '<span class="required">*</span>' : '' }}
                                            </label>
                                            <div class="col-md-6 col-sm-6 col-xs-12">
                                                <span class="fa fa-align-left form-control-feedback left" aria-hidden="true"></span>
                                                {{ form_row(texto.subtitulo, { 'label': false }) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-xs-12 form-group">
                                        <div class="form-group {{ texto.descricao.vars.required ? 'item' : '' }}">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="{{ texto.descricao.vars.id }}">
                                                {{ texto.descricao.vars.label|transchoice(0,{}, 'messagesCommonBundle') }}
                                                {{ texto.descricao.vars.required ? '<span class="required">*</span>' : '' }}
                                            </label>
                                            <div class="col-md-6 col-sm-6 col-xs-12">
                                                {{ form_row(texto.descricao, { 'label': false }) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                            <div class="form-horizontal form-label-left">
                                <div class="col-md-12 col-sm-12 col-xs-12 form-group">
                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                        </label>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <button type="button" class="btn btn-primary  btn-lg" ng-click="alterarImageGaleria({{ image.vars.value.id }},{{ loop.index0 }})">
                                                {{ 'title.salvar'|transchoice(0,{}, 'messagesCommonBundle') }}
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% endif %}
                    {% endfor %}
                </div>
                <br clear="all" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    {{ 'title.fechar'|transchoice(0,{}, 'messagesCommonBundle') }}
                </button>
            </div>
        </div>
    </div>
</div>