<div class="modal fade {{ modal }}" tabindex="-1" role="dialog" aria-hidden="true" ng-controller="{{ controller }}">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span>
                </button>
                <h3 class="modal-title" id="myModalLabel">
                    <i class="fa {{ iconTitle }}"></i>
                    <small>{{ title|transchoice(0,{}, bundle) }}</small>
                </h3>
            </div>
            <div class="modal-body">
                {% if formOption is defined %}
                    {{ form(delete_form) }}
                {% else %}
                <button type="button" class="btn btn-success btn-lg bt-delete-foto bt-delete-sim" ng-click='{{ varClick is defined ? varClick }}' >
                    {{ 'title.sim'|transchoice(0,{}, 'messagesCommonBundle') }}
                </button>
                {% endif %}
                <button type="button" class="btn btn-danger btn-lg bt-delete-foto" data-dismiss="modal">
                    {{ 'title.nao'|transchoice(0,{}, 'messagesCommonBundle') }}
                </button>
                <div class="loader"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    {{ 'title.fechar'|transchoice(0,{}, 'messagesCommonBundle') }}
                </button>
            </div>
        </div>
    </div>
</div>
<script>
    function getId(id){
        jQuery('.bt-delete-sim').val(id);
    }
</script>