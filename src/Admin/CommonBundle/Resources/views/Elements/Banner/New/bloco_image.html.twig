<div>
    <div class="x_panel">
        <div class="x_title">
            <h2>{{ 'title.image'|transchoice(0,{}, 'messagesCommonBundle') }}</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li class="dropdown"></li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="row">
                <div class="form-horizontal form-label-left">
                    <div class="col-md-12 col-sm-12 col-xs-12 form-group">
                        <div class="form-group {{ form.local.vars.required ? 'item' : '' }}">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="{{ form.local.vars.id }}">
                                {{ form.local.vars.label|transchoice(0,{}, 'messagesLocalBannerCommonBundle') }}
                                {{ form.local.vars.required ? '<span class="required">*</span>' : '' }}
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                {{ form_row(form.local, { 'label': false }) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-horizontal form-label-left">
                    <div class="col-md-4 col-sm-4 col-xs-4 form-group"></div>
                    <div class="col-md-4 col-sm-4 col-xs-4 form-group">
                        {% set imageCrop = {
                        'fileTrigger': '#admin_commonbundle_banner_image_file'} %}
                        {{ include('@AdminImage/Elements/image_crop.html.twig',imageCrop) }}
                    </div>
                    <div class="col-md-4 col-sm-4 col-xs-4 form-group"></div>
                </div>
            </div>
        </div>
    </div>
</div>
